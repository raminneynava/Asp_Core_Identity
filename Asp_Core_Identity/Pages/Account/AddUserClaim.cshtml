@page
@using Asp_Core_Identity.Models
@model Asp_Core_Identity.Pages.Account.AddUserClaimModel
@{
    int index = 0;
}


<form asp-action="AddUserRole">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" name="Id" value="@Model.Id" />
    </div>

    @for (int i = 0; i < Model.Perrmisions.Count; i++)
    {
        <lable>@Model.Perrmisions[i].Name</lable>
        <input type="checkbox" asp-for="@Model.Perrmisions[i].IsCkeck" />
        <input type="hidden"  asp-for="@Model.Perrmisions[i].Name" />
        index++;
    }

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>